fsm add2 {

  // port declarations:
  in sync u8 p_in;
  out sync u8 p_out;

  // optional entity variables
  u10 a;
  u3 b = 3'd6; // after reset, b will be initialised to 6

  // all FSMs must contain a main function:
  void main() {
    u8 x = p_in.read();
    p_out.write(x + a[7:0] + 'b);
    fence; // All functions must end with a control statement
  }
}
